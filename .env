# .env.example - Environment Variables Template
# Copy this file to .env and fill in your actual values

# OpenAI Configuration (Required)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-large

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/llm_retrieval

# Vector Database Configuration
VECTOR_DB_TYPE=faiss
# For FAISS (local storage)
FAISS_INDEX_PATH=./data/faiss_index

# For Pinecone (optional, if using Pinecone instead of FAISS)
# PINECONE_API_KEY=your_pinecone_api_key_here
# PINECONE_ENVIRONMENT=your_pinecone_environment
# PINECONE_INDEX_NAME=llm-retrieval-index

# HackRX Authentication Token
HACKRX_TOKEN=your_hackrx_token_here

# Application Configuration
DEBUG=true
LOG_LEVEL=INFO
MAX_FILE_SIZE_MB=50
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_TOKENS=4000
TEMPERATURE=0.1
BATCH_SIZE=10

# Redis Configuration (optional, for caching)
# REDIS_URL=redis://localhost:6379
# CACHE_TTL=3600

# Performance Configuration
MAX_CONCURRENT_REQUESTS=5

# Logging Configuration
LOG_FILE=./logs/app.log